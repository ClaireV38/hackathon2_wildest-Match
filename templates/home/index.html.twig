{% extends 'base.html.twig' %}

{% block title %}Bienvenue !{% endblock %}

{% block body %}
    <div class="title">
        <h1>The Wildest Match </h1>
    </div>
    <div class="questionRandom">
        <div class="row">
            <div class="col-sm-6">
                    <div class="card-body" >
                        <h5 class="card-header">Question Aléatoire</h5>
                        <p class="card-text">{{ randQuestion[0].title }}</p>
                        <a href="#" id="btn-start" class="btn btn-blueButton">Start Game</a>
                    </div>
            </div>
            <div class="createQuestion">
                <div class="col-sm-6">
                        <div class="card-body">
                            <h5 class="card-header">Crée ta question</h5>
                            <p class="card-text">
                                {{ form_start(form) }}
                                {{ form_row(form.title, {'label': ' '}) }}
                                {{ form_end(form) }}
                                </p>
                            <a href="#" class="btn btn-blueButton">Start Game</a>
                        </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://js.pusher.com/7.0/pusher.min.js"></script>
    <script>
        const pusher = new Pusher('ad51b741b37252cba3b1', {
            cluster: 'eu'
        });
        const channel = pusher.subscribe('greetings');
        channel.bind('new-greeting', function(questionid) {
            let url = "{{ path('player', {id:"_questionid_"})}}";
            window.location.assign(url.replace("_questionid_", questionid));
        });
        $('#btn-start').click(function () {
            $.post("{{ path('demo_say_hello') }}");
        });
    </script>
{% endblock %}
