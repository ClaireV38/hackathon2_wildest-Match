{% extends 'base.html.twig' %}

{% block title %}Bienvenue !{% endblock %}

{% block body %}
    <div class="title">
        <h1>The Wildest Match </h1>
    </div>
    <div class="questionReponsePlayer">
        <div class="questionRandomPlayer">
            <div class="row">
                <div class="col-sm-6">
                    <div class="card-body" id="cardBodyPlayer">
                        <h5 class="card-header">Question </h5>
                        <p class="card-text">
                            {% if results is not empty %}
                            {{ results[0].question.title }}
                            {% else %}
                                personne n'a r√©pondu
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="reponseChoice">
            <div class="list-group">
                {% for result in results %}
                    <a href="{{ path('winner', {id: result.user.id}) }}">
                    <div class="list-group-item list-group-item-action" id="resultAnswer">
                        {{ result.answer.title }}
                        <div class="pseudo">
                            <hr>
                            {{ result.user.name }}
                        </div>
                    </div>
                     </a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
