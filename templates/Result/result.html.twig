{% extends 'base.html.twig' %}

{% block title %}Bienvenue !{% endblock %}

{% block body %}
    <div class="title">
        <h1>The Wildest Match </h1>
    </div>
    <div class="questionReponsePlayer">
        <div class="questionRandomPlayer">
            <div class="row">
                <div class="col-sm-6">
                    <div class="card-body" id="cardBodyPlayer">
                        <h5 class="card-header">Question </h5>
                        <p class="card-text">
                            {% if results is not empty %}
                        <h5><strong>{{ results[0].question.title }}</strong></h5>
                            {% else %}
                                personne n'a r√©pondu
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="reponseChoice">
            <div class="list-group">
                {% for result in results %}
                    <div class="list-group-item list-group-item-action" id="resultAnswer">
                        <h6><strong>{{ result.answer.title }}</strong></h6>
                        <div class="pseudo">
                            <hr>
                            <a href="{{ path('winner', {id: result.user.id}) }}">
                                {{ result.user.name }}
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        setInterval(function () {
            window.location.assign("{{ path('result') }}");
        }, 3000)
    </script>
{% endblock %}
